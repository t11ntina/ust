<Window x:Class="ust.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ust"
        mc:Ignorable="d"
       Title="Смена пароля" MinHeight="300" MinWidth="400" SizeToContent="WidthAndHeight">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Aqua" Offset="0.0"/>
            <GradientStop Color="Purple"  Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Смена пароля"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#333"
            HorizontalAlignment="Center"
            Margin="0, 10"
            FontFamily="Comic Sans"/>
            <TextBlock Text="Текущий пароль" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtCurrentPassword"
         Margin="0, 5, 0, 10"
         Height="35"
         Background="Gray"
         BorderBrush="Black"
         BorderThickness="1"/>
            <TextBlock Text="Новый пароль" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtNewPassword"
        Margin="0, 5, 0, 10"
        Height="35"
        Background="Gray"
        BorderBrush="Black"
        BorderThickness="1"/>
            <TextBlock Text="Повторить новый пароль" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtConfirmPassword"
        Margin="0, 5, 0, 10"
        Height="35"
        Background="Gray"
        BorderBrush="Black"
        BorderThickness="1"/>
            <Button Content="Войти"
        Width="120"
        Height="30"
        Background="LightGray"
        Foreground="#444"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        Cursor="Hand"
        Margin="0,10,0,0"
        BorderThickness="0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>