<Window x:Class="ust.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ust"
        mc:Ignorable="d"
        Title="Панель администратора" Height="450" Width="800">
    <Grid Background="#FFFCCBFF">
        <DataGrid x:Name="Users" 
                  HorizontalAlignment="Center" 
                  Height="414" 
                  VerticalAlignment="Center" 
                  Width="780" 
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding lastname}" Width="Auto"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding lastname}" Width="Auto"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding lastname}" Width="Auto"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding lastname}" Width="Auto"/>
                <DataGridTextColumn Header="Заблокирован" Binding="{Binding lastname}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить пользователя" HorizontalAlignment="Left" Height="26" Margin="52,361,0,0" VerticalAlignment="Top" Width="171" Click="Button_Click" BorderBrush="#FFC300FF" Foreground="#FF9A19B9" FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="14">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF00F9FF" Offset="1"/>
                    <GradientStop Color="#FF006668"/>
                    <GradientStop Color="#FF00999D" Offset="0.89"/>
                    <GradientStop Color="#FF00DADF"/>
                    <GradientStop Color="#FF00E3E9"/>
                    <GradientStop Color="#FF00DBE0" Offset="0.467"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Разблокировать" HorizontalAlignment="Center" Height="26" Margin="0,361,0,0" VerticalAlignment="Top" Width="171" Click="Button_Click" BorderBrush="#FFC300FF" Foreground="#FF9A19B9" FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="14">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF00F9FF" Offset="1"/>
                    <GradientStop Color="#FF006668" Offset="0"/>
                    <GradientStop Color="#FF00999D" Offset="0.89"/>
                    <GradientStop Color="#FF00DADF"/>
                    <GradientStop Color="#FF00E3E9" Offset="0"/>
                    <GradientStop Color="#FF00DBE0" Offset="0.467"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Сохранить изменения" HorizontalAlignment="Left" Height="26" Margin="585,361,0,0" VerticalAlignment="Top" Width="171" Click="Button_Click" BorderBrush="#FFC300FF" Foreground="#FF9A19B9" FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="14">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF00F9FF" Offset="1"/>
                    <GradientStop Color="#FF006668" Offset="0"/>
                    <GradientStop Color="#FF00999D" Offset="0.89"/>
                    <GradientStop Color="#FF00DADF"/>
                    <GradientStop Color="#FF00E3E9" Offset="0"/>
                    <GradientStop Color="#FF00DBE0" Offset="0.467"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
